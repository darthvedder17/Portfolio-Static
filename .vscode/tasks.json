{
    "version": "2.0.0",
    "command": "cmd",
    "args": ["/C"],
    "isShellCommand": true,
    "showOutput": "always",
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "Chrome",
            "args": [
                "start chrome -incognito \"${file}\""
            ],
            "problemMatcher": [],
            "label": "Chrome",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "taskName": "Firefox",
            "args": [
                "start firefox -private-window \"${file}\""
            ]
        },
        {
            "taskName": "Edge",
            "args": [
                "${file}"
            ]
        }
    ]
   }